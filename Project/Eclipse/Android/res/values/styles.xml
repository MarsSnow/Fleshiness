   <style name="theme_dialog_alert">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="title">
		<item name="android:textSize">23.0dip</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#ffffc000</item>
		<item name="android:shadowColor">#ffc49012</item>
		<item name="android:shadowDx">1.5</item>
		<item name="android:shadowDy">1.5</item>
		<item name="android:shadowRadius">3.0</item>
	</style>
	
	
	<style name="animStyle" parent="@android:style/Widget.ProgressBar.Large">
		<item name="android:indeterminateDrawable">@anim/gif</item>
	</style>
	
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
